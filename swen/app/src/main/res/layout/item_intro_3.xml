<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_intro_3">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="0dp"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:id="@+id/item_intro_3_left"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">
            <!--
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:id="@+id/iv_intro3_left"
                android:scaleType="centerCrop" />
            -->
            <com.swen.LoadingImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:id="@+id/iv_intro3_left" />

            <TextView
                android:id="@+id/tv_intro3_left"
                style="@style/text_title"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:minLines="2"
                android:maxLines="2"
                android:layout_margin="8dp"
                android:gravity="start"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:id="@+id/item_intro_3_right">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">
            <!--
            <ImageView
                android:id="@+id/iv_intro3_right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:scaleType="centerCrop" />
            -->
            <com.swen.LoadingImageView
                android:id="@+id/iv_intro3_right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/tv_intro3_right"
                style="@style/text_title"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:minLines="2"
                android:maxLines="2"
                android:layout_margin="8dp"
                android:gravity="start"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>